<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".IndianBoardsActivity">

    <include layout="@layout/mainheader_layout" />

    <TextView
        android:id="@+id/main_category_frame_text_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Indian Boards"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/custom_border"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/topic_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:contentDescription="image"
            android:src="@drawable/poetry_card_img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poetry"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/topic_card_heading"/>
<!--        <TextView-->
<!--            android:id="@+id/topic_card_text"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textColor="@color/grey"-->
<!--            android:maxLines="2"-->
<!--            android:ellipsize="end"-->
<!--            android:text="Perfect for students, enthusiasts, and anyone eager to enhance their knowledge, our carefully crafted puzzle features common blah blah bkah bkah bkahbkahb euofbeuibfueb eubfuoeabfo ewoifn"-->
<!--            />-->
        <TextView
            android:id="@+id/showMoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show More"
            android:textColor="@color/blue_light"
            android:clickable="true" />



    </LinearLayout>



</LinearLayout>